        double totalArea = Math.PI * (raio * raio);
        System.out.println("Digite o valor do raio ");

    }
}




public class HorasTrabalho{
    public static void main (String[] args){
        Scanner scan = new Scanner (System.in);

        double horas = scan.nextDouble();
        System.out.println("Digite o número de horas trabalhadas durante o mes: " + horas);
        double valor = scan.nextDouble();
        System.out.println("Digite o valor por hora de trabalho em R$: " + valor);

        double totalDinheiro = horas * valor;
        System.out.println("Valor Total Trabalhado por mês: " + totalDinheiro);
    }
}


public class TemperaturaFarenheit {
    public static void main (String[] args){
        Scanner scan = new Scanner (System.in);

        double farenheit = scan.nextDouble();
        System.out.println("Digite a temperatura em Farenheit: " + farenheit);
        double celsius = (5*(farenheit-32)/9);
        System.out.println("Valor Total em Celsius: " + celsius);
    }
}





