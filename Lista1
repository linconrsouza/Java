public class PesoIdeal{
    public static void main (String[] args){
        Scanner scan = new Scanner (System.in);

        double altura = scan.nextDouble();
        System.out.println("Digite a sua Altura: " + altura);
        double pesoideal = ((72.8*altura)-58);
        System.out.println("Seu peso ideal é: " + Pesoideal);
    }
}





public class TotalSalario{
    public static void main(String[] args){
        Scanner scan = new Scanner (System.in);
        
        double valorHora = scan.nextDouble();
        System.out.println("Digite o valor por hora: " + valorHora);
        
        double qtdHora = scan.nextDouble();
        System.out.println("Digite a quantidade de horas trabalhadas por mês: " + qtdHora);
        
        double salarioTotal = valorHora * qtdHora;
        
        double desc_Inss = (salarioTotal - (salarioTotal * 0.92));
        System.out.println("Valor Total descontado por INSS: " + desc_Inss);

        double desc_Sindicato = (salarioTotal - (salarioTotal * 0.95));
        System.out.println("Valor Total descontado do Sindicato: " + desc_Sindicato);

        double desc_ImpostoRenda = (salarioTotal - (salarioTotal * 0.89));
        System.out.println("Valor Total descontado por INSS: " + desc_ImpostoRenda);

        double salarioFinal = salarioTotal - (desc_ImpostoRenda + desc_Inss + desc_Sindicato);

        System.out.println("Salário Total Líquido: " + salarioFinal);


    }


}

